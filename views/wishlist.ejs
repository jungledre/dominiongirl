<% include /header %>

<div class="container">
  <form role="form" action="/wishlist" method="POST">
    <div class="form-group">
      <textarea class="form-control" rows="3" name="text">Share the features you'd like to see added!</textarea>
    </div>
    <button type="submit" class="btn btn-default">Post</button>
  </form>

  <% for (var i = 0; i < feature.length; i++) { %>

<div class="panel panel-default">
  <div class="panel-body">
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>&nbsp;<%= feature[i].text %>
  </div>
</div>

  <% } %>

</div>

<% include /footer %>
